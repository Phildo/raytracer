CURDIR=.
SRCDIR=$(CURDIR)
HRC=$(wildcard $(SRCDIR)/*.h)
SRC=$(wildcard $(SRCDIR)/*.cpp)
OUT=a.exe
IMG=test.ppm
LIB=
ARG=
CC=cl

$(OUT): $(HRC) $(SRC)
	$(CC) $(ARG) $(SRC) $(LIB)

run: $(OUT)
	./$(OUT)

$(IMG): $(OUT)
	./$(OUT) > $(IMG)

img: $(IMG)
	

tags: $(HRC) $(SRC)
	ctags $(SRC)

clean:
	rm *.obj *.exe

